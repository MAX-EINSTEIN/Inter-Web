<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailEvent" >

    <ImageView
        android:id="@+id/detailEventImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/detailEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailEventImage"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="40sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/detailEventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailEventTitle"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/detailEventDate"
        android:stretchColumns="*"
        android:shrinkColumns="*">
        <TableRow android:padding="8dp">
            <TextView android:text="Participant" android:textSize="25sp" android:textColor="@android:color/black" android:background="@drawable/side_nav_bar"/>
            <TextView android:text="School" android:textSize="25sp" android:textColor="@android:color/black" android:background="@drawable/side_nav_bar"/>
        </TableRow>
        <TableRow android:padding="8dp">
            <TextView android:text="Participant 1" android:textSize="20sp"/>
            <TextView android:text="Hogwarts" android:textSize="20sp"/>
        </TableRow>
        <TableRow android:padding="8dp">
            <TextView android:text="Participant 2" android:textSize="20sp"/>
            <TextView android:text="Sunshine" android:textSize="20sp"/>
        </TableRow>
        <TableRow android:padding="8dp">
            <TextView android:text="Participant 3" android:textSize="20sp"/>
            <TextView android:text="MoonLit" android:textSize="20sp"/>
        </TableRow>
    </TableLayout>


</RelativeLayout>